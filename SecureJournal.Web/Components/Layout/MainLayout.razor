@inherits LayoutComponentBase
@inject ISecureJournalAppService JournalApp
@inject NavigationManager Navigation
@inject IJSRuntime JS

@{
    var isAuthenticated = JournalApp.HasCurrentUser();
    var currentUser = isAuthenticated ? JournalApp.GetCurrentUser() : null;
}

@if (!isAuthenticated)
{
    <div class="p-4">Redirecting to login...</div>
}
else
{
    <div class="page-shell">
        <aside class="sidebar-panel">
            <NavMenu />
        </aside>

        <main class="main-panel">
            <header class="app-header">
                <div>
                    <p class="app-header-label">Security-first project event logging</p>
                    <h1 class="app-header-title">Secure Journal</h1>
                </div>

                <div class="header-actions">
                    <div class="session-chip">
                        <span class="session-chip-label">Current User</span>
                        <div class="session-chip-user">@currentUser!.DisplayName (@currentUser.Role)</div>
                        <div class="small text-muted"><code>@currentUser.Username</code></div>
                    </div>

                    <button type="button" class="btn btn-outline-secondary theme-toggle" @onclick="ToggleTheme">
                        Toggle Theme
                    </button>
                    <a class="btn btn-outline-danger" href="/auth/logout?returnUrl=/">Logout</a>
                </div>
            </header>

            <article class="content-panel">
                @Body
            </article>
        </main>
    </div>
}

<div id="blazor-error-ui" data-nosnippet>
    An unhandled error has occurred.
    <a href="." class="reload">Reload</a>
    <span class="dismiss">x</span>
</div>

@code {
    private bool _themeInitialized;

    protected override void OnParametersSet()
    {
        if (!JournalApp.HasCurrentUser())
        {
            Navigation.NavigateTo("/", forceLoad: false);
        }
    }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender && !_themeInitialized)
        {
            _themeInitialized = true;
            await JS.InvokeVoidAsync("secureJournalTheme.init");
        }
    }

    private async Task ToggleTheme()
        => await JS.InvokeVoidAsync("secureJournalTheme.toggle");

}
