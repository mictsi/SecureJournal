{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    },
    "RequestLogging": {
      "Mode": "PostsOnly",
      "Level": "Information"
    },
    "File": {
      "Enabled": false,
      "Path": "logs/securejournal.dev.log",
      "MinimumLevel": "Debug"
    }
  },
  "ConnectionStrings": {
    "SecureJournalSqlite": "Data Source=securejournal.dev.db",
    "SecureJournalSqlServer": "Server=tcp:<your-sql-server>.database.windows.net,1433;Initial Catalog=<your-dev-database>;Persist Security Info=False;User ID=<your-username>;Password=<your-password>;MultipleActiveResultSets=False;Encrypt=True;TrustServerCertificate=False;Connection Timeout=30;",
    "SecureJournalPostgres": "Host=<your-host>;Database=<your-dev-database>;Username=<your-username>;Password=<your-password>",
    "SecureJournalIdentitySqlite": "Data Source=securejournal.identity.dev.db",
    "SecureJournalIdentitySqlServer": "Server=tcp:<your-sql-server>.database.windows.net,1433;Initial Catalog=<your-dev-identity-database>;Persist Security Info=False;User ID=<your-username>;Password=<your-password>;MultipleActiveResultSets=False;Encrypt=True;TrustServerCertificate=False;Connection Timeout=30;",
    "SecureJournalIdentityPostgres": "Host=<your-host>;Database=<your-dev-identity-database>;Username=<your-username>;Password=<your-password>"
  },
  "Persistence": {
    "Provider": "Sqlite",
    "EnableProductionAppDatabase": true,
    "EnableProductionIdentityDatabase": true,
    "AutoMigrateOnStartup": false,
    "AppConnectionString": "",
    "IdentityConnectionString": ""
  },
  "Security": {
    "JournalEncryptionKey": "<replace-with-dev-journal-encryption-key>",
    "LocalPasswordMinLength": 8,
    "LocalPasswordRequireUppercase": true,
    "LocalPasswordRequireLowercase": true,
    "LocalPasswordRequireDigit": true,
    "LocalPasswordRequireNonAlphanumeric": true,
    "SessionCookieName": "SecureJournal.Session",
    "SessionCookieHours": 8
  },
  "Authentication": {
    "EnableLocalLogin": true,
    "EnableOidc": false,
    "EnableAspNetIdentity": true,
    "OidcProviderName": "Generic OIDC (Development Placeholder)",
    "Oidc": {
      "Authority": "https://<your-dev-oidc-provider>",
      "ClientId": "<your-dev-oidc-client-id>",
      "ClientSecret": "<your-dev-oidc-client-secret>",
      "CallbackPath": "/signin-oidc",
      "GroupClaimType": "groups",
      "RoleGroupMappings": {
        "Administrator": [ "<dev-oidc-group-for-admins>" ],
        "Auditor": [ "<dev-oidc-group-for-auditors>" ],
        "ProjectUser": [ "<dev-oidc-group-for-project-users>" ]
      }
    }
  },
  "BootstrapAdmin": {
    "Username": "admin",
    "DisplayName": "Startup Administrator (Dev)",
    "Password": "<bootstrap-admin-dev-password>",
    "SyncPasswordOnStartup": true
  },
  "AllowedHosts": "*"
}
