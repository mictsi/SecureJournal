@inherits LayoutComponentBase
@inject ISecureJournalAppService JournalApp
@inject NavigationManager Navigation
@inject IJSRuntime JS

@if (!_authChecked)
{
    <div class="p-4">Loading...</div>
}
else if (!_isAuthenticated)
{
    <div class="p-4">Redirecting to login...</div>
}
else
{
    <div class="page-shell">
        <aside class="sidebar-panel">
            <NavMenu />
        </aside>

        <main class="main-panel">
            <header class="app-header">
                <div>
                    <h1 class="app-header-title">Secure Journal</h1>
                    <p class="app-header-label">Security-first project event logging</p>
                </div>

                <div class="header-actions">
                    <div class="session-chip">
                        <div class="session-chip-row">
                            <span class="session-chip-label">Current user:</span>
                            <span class="session-chip-user">@_currentUser!.Username</span>
                        </div>
                        <div class="session-chip-row">
                            <span class="session-chip-label">Role</span>
                            <span class="session-chip-role">@_currentUser.Role</span>
                        </div>
                    </div>

                    <button type="button" class="btn btn-outline-secondary theme-toggle" @onclick="ToggleTheme">
                        Toggle Theme
                    </button>
                    <form method="post" action="/auth/logout" class="d-inline">
                        <AntiforgeryToken />
                        <input type="hidden" name="returnUrl" value="/" />
                        <button type="submit" class="btn btn-outline-danger">Logout</button>
                    </form>
                </div>
            </header>

            <article class="content-panel">
                @Body
            </article>
        </main>
    </div>
}

<ReconnectModal />

<div id="blazor-error-ui" data-nosnippet>
    An unhandled error has occurred.
    <a href="." class="reload">Reload</a>
    <span class="dismiss">x</span>
</div>

@code {
    private bool _themeInitialized;
    private bool _authChecked;
    private bool _isAuthenticated;
    private UserContext? _currentUser;

    protected override async Task OnParametersSetAsync()
    {
        _isAuthenticated = await JournalApp.HasCurrentUserAsync();
        _currentUser = _isAuthenticated ? await JournalApp.GetCurrentUserAsync() : null;
        _authChecked = true;

        if (!_isAuthenticated)
        {
            Navigation.NavigateTo("/", forceLoad: false);
        }
    }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender && !_themeInitialized)
        {
            _themeInitialized = true;
            await JS.InvokeVoidAsync("secureJournalTheme.init");
        }
    }

    private async Task ToggleTheme()
        => await JS.InvokeVoidAsync("secureJournalTheme.toggle");

}
